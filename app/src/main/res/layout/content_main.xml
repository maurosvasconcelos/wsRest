<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.projeto.Activity.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#7fa87f"
    android:clickable="false">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="68dp"
        android:text="Entrar"
        android:id="@+id/btnListar"
        android:onClick="onClick()"
        android:background="#228B22"
        android:textColor="#fafafa"

        app:layout_constraintHorizontal_bias="0.73"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/editTextCpf"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="201dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewLista"
        android:hint="Dados:"
        android:textColor="#669900"
        android:background="#FFFFFF"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintVertical_bias="0.47" />

    <EditText
        android:layout_width="183dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextCpf"
        android:textColor="#32CD32"
        android:textColorHint="#32CD32"
        android:hint="Informe o CPF"
        android:background="#FFFFFF"

        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="45dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/guideline"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_end="411dp" />

    <ImageView
        android:layout_width="342dp"
        android:layout_height="67dp"
        app:srcCompat="@drawable/logo_icf"
        android:id="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/btnListar"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
